<div class='container'>

  <div class="course_profile row">

    <div id="course_<%= @course.id %>" class="course_image col-md-5" %>
      <img src="<%= @course.image %>" alt="user_<%= @course.id %> image" class="img-responsive img-thumbnail">
    </div>

    <div class='user_detail col-md-7 text-left'>
      <h3>This is <%= @course.name %>!</h3>
      <p>
        <strong>Name:
        <%= @course.name %></strong>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @course.category.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @course.description %>
      </p>

      <p>
        <strong>City name:</strong>
        <%= @course.city_name %>
      </p>

      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
    </div>

  </div>



<div>

 <h2>{ko}sharing{<%= @user.courses.count %>}}</h2>
 <ul>
   <%= @courses.each do |course| %>
     <li>
       <%= link_to course do %>
         <div>
           <h3><%= course.name %></h3>
           <p><%= course.category %></p>
           <p><%= course.description %></p>
           <p><%= course.city_name %></p>
         </div>
       <% end %>
     </li>
   <% end %>
 </ul>

 <% if @courses.size == 0 %>
   <em>No courses found.</em>
 <% end %>

</div>

